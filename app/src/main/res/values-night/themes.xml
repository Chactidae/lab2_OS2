<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Lab2_OS2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:textSize">40sp</item>
        <item name="minHeight">80dp</item>
        <item name="android:textColor">@color/colorFuncButtonTxt</item>
        <item name="android:background">@drawable/func_buttons</item>
    </style>

    <style name="NumberButtons">
        <item name="android:textSize">40sp</item>
        <item name="minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/num_buttons</item>
    </style>
</resources>